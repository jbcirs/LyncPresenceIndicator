<Window x:Class="Lync_Presence_Indicator.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Microsoft.Lync.Controls;assembly=Microsoft.Lync.Controls"
    Title="Lync Presence Indicator" Width="307" Height="225" Visibility="Visible" WindowState="Minimized" Icon="/Lync_Presence_Indicator;component/LyncPresence.ico" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="5,5,5,5">
            <TextBlock Name="statusTxt" FontFamily="Calibri" Margin="5,0,0,0" FontSize="18" FontWeight="Bold"></TextBlock>
            <CheckBox Name="LyncLightToggle" Margin="0,15,0,0" IsEnabled="False" FontWeight="Bold">Enable USB Lync Status Light</CheckBox>
            <Label Content="Presence Light Colors:" Margin="0,15,0,0" Height="28" Name="label1" FontWeight="Bold" />
            <ComboBox Name="LyncPresence" Margin="0,5,150,15" IsEnabled="False" Height="23" Width="120" />
            <ComboBox Name="LyncPresenceColor" Margin="150,-40,0,15" IsEnabled="False" Height="23" Width="120" />
            <TextBlock Name="ErrorMessage" Foreground="Red"></TextBlock>
        </StackPanel>

    </Grid>

</Window>
